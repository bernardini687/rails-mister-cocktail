<h1><%= @cocktail.name %></h1>
<%= link_to 'back', cocktails_path %>

<% @cocktail.doses.each do |d| %>
  <p>
    <span><strong><%= d.description %></strong></span>
    <span><%= d.ingredient.name %></span>
    <span>
      <%= link_to 'delete', dose_path(d, cocktail_id: params[:id]),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    </span>
  </p>
<% end %>

<%= link_to 'add dose', new_cocktail_dose_path(@cocktail) %>
